# Polygon
POLYGON_MAINNET_RPC=https://polygonzkevm-mainnet.g.alchemy.com/v2/eksZE5q_QW8UkO27YqloN4ZtlqtGPU-E
POLYGON_MUMBAI_RPC=https://polygonzkevm-mumbai.g.alchemy.com/v2/eksZE5q_QW8UkO27YqloN4ZtlqtGPU-E

